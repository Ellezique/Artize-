
<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :street_number %>
    <%= f.input :street_name %>
    <%= f.input :suburb %>
    <%= f.input :state %>
    <%= f.input :postcode %>
    <%= f.input :country %> 
    <!--<%= f.association :user %> Association removed to avoid it displaying in the browser view. Backend sets user to current user.-->
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-primary btn-lg"%>
  </div>
<% end %>
