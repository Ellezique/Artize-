
<%= simple_form_for(@artist) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :artist_first_name, label: "Artist's first name", required: true, placeholder: "First name"  %>
    <%= f.input :artist_last_name, label: "Artist's last name", required: true, placeholder: "Last name"  %>
    <%= f.input :about_artist %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-primary btn-lg" %>
  </div>
<% end %>
