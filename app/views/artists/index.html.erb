<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Artist</th>
      <th>About artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= link_to artist.artist_name, artist_path(artist.id) %></td>
        <td><%= artist.about_artist %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

