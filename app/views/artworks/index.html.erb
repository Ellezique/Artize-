<p id="notice"><%= notice %></p>

<h1>Artworks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Art title</th>
      <th>Art description</th>
      <th>Available</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= link_to artwork.art_title, artwork_path(artwork.id) %></td>
        <td><%= artwork.art_description %></td>
        <td><%= artwork.available %></td>
        <td><%= artwork.artist.artist_name %></td>
        <td><%= link_to 'Show', artwork %></td>
        <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
        <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

