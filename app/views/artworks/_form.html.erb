
<%= simple_form_for(@artwork) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :art_title, label: "Title of Artwork" %>
    <%= f.input :art_description, label: "Description" %>
    <%= f.input :available %>
    <%= f.association :artist, label_method: :artist_name, value_method: :id, include_blank: false %>
  </div>

  <p><%= link_to "If the artist is not listed, please go create a new artist before creating an artwork", new_artist_path%></p>
  

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-primary btn-lg"  %>
  </div>
<% end %>
